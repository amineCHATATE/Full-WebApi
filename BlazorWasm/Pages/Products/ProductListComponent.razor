@page "/Products"
@using BlazorWasm.Models
@using BlazorWasm.Services
@inject IProductService _productService

<PageTitle>Products List</PageTitle>
<h1>Products List</h1>
<div class="card">
    <div class="card-header">
        <a href="Produit/add-product" class="btn btn-link test-primary float-end">Add Product</a>
    </div>
</div>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (products.Count() > 0)
        {
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Quantity</td>
                    <td>
                        <button class="btn btn-sm btn-danger" id="delete-@product.Id" @onclick="() => DeleteProduct(product.Id)">Delete</button>
                        <a href="@($"Produit/Detail/{product.Id}")" class="btn btn-link btn-info">View</a>
                        <a href="@($"Produit/update-product/{product.Id}")" class="btn btn-link btn-success">Update</a>
                    </td>
                </tr>
            }
        } 
        else
        {
            <tr>
                <td colspan="4" class="text-center">No products found.</td>
            </tr>
        }
        
    </tbody>
</table>

@code {
    public List<Product> products { get; set; } = [];
    protected override async Task OnInitializedAsync()
    {
        products = await _productService.GetAllProducts();
    }
    
    protected async Task DeleteProduct(int productId)
    {
        await _productService.DeleteProduct(productId);
        products = products.Where(p => p.Id != productId).ToList();
    }

}
